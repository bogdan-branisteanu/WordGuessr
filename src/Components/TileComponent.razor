@using src.Components


@switch (@Tile.State)
{
   
    case "contained":
        <table style="background-color:#FBC400">
            <tr>
                <td id=@Tile.tileId>@Tile.Letter</td>
            </tr>
        </table>
    break;

    case "doubleGreen":
        <table style="background: linear-gradient(45deg, #b9d344 30%, green 70%);">
            <tr>
                <td id=@Tile.tileId>@Tile.Letter</td>
            </tr>
        </table>
    break;

    case "doubleYellow":
        <table style="background: linear-gradient(45deg, #b9d344 70%, green 30%);">
            <tr>
                <td id=@Tile.tileId>@Tile.Letter</td>
            </tr>
        </table>
    break;

    case "missing":
        <table style="background-color:black">
            <tr>
                <td id=@Tile.tileId>@Tile.Letter</td>
            </tr>
        </table>
    break;

    case "correct":
        <table style="background-color:green">
            <tr>
                <td id=@Tile.tileId>@Tile.Letter</td>
            </tr>
        </table>            
     break;

     default:
        <table style="background-color:rgb(45, 45, 45)">
            <tr>
                <td id=@Tile.tileId>@Tile.Letter</td>
            </tr>
        </table>    
     break;

}


