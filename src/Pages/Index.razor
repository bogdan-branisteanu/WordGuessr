@page "/game/{NumLettersString}/{LanguageString}"
@using src.Components
@using Microsoft.AspNetCore.Components.Web
@using src.Pages

<PageTitle>Index</PageTitle>
<center>
    

<div class="container-fluid" style="margin-bottom: 22px; background-color: rgb(45, 45, 45))"  @onkeydown="KeyboardEventHandler" tabindex="0" @ref="inputDiv" >
    
    <h1 style="background-color: rgb(45, 45, 45); color: white">Word Guesser</h1>

        <div class="card-body" style="background-color: rgb(45, 45, 45); height:1000px">
            
            <div class="game-container">
                <div class="grid-container" style="grid-template-columns:repeat(@NumLetters, 80px);">
                    
                    @foreach(Tile tile in tileList){
                            <div class="grid-item">
                                <li style="display: inline-block; margin-right:5px;" > <TileComponent Tile=@tile/> </li>
                        </div>
                        }
                </div>
            </div>

            &nbsp;
            &nbsp;

            <div class="keyboard">
                <div class="btn-group1">
                    <button class="button" id="#q" @onclick="@(e => ButtonEventHandler("Q"))">Q</button>
                    <button class="button" id="#w" @onclick="@(e => ButtonEventHandler("W"))">W</button>
                    <button class="button" id="#e" @onclick="@(e => ButtonEventHandler("E"))">E</button>
                    <button class="button" id="#r" @onclick="@(e => ButtonEventHandler("R"))">R</button>
                    <button class="button" id="#t" @onclick="@(e => ButtonEventHandler("T"))">T</button>
                    <button class="button" id="#y" @onclick="@(e => ButtonEventHandler("Y"))">Y</button>
                    <button class="button" id="#u" @onclick="@(e => ButtonEventHandler("U"))">U</button>
                    <button class="button" id="#i" @onclick="@(e => ButtonEventHandler("I"))">I</button>
                    <button class="button" id="#o" @onclick="@(e => ButtonEventHandler("O"))">O</button>
                    <button class="button" id="#p" @onclick="@(e => ButtonEventHandler("P"))">P</button>
                </div>
                <div class="btn-group1">
                    <button class="button" id="#a" @onclick="@(e => ButtonEventHandler("A"))">A</button>
                    <button class="button" id="#s" @onclick="@(e => ButtonEventHandler("S"))">S</button>
                    <button class="button" id="#d" @onclick="@(e => ButtonEventHandler("D"))">D</button>
                    <button class="button" id="#f" @onclick="@(e => ButtonEventHandler("F"))">F</button>
                    <button class="button" id="#g" @onclick="@(e => ButtonEventHandler("G"))">G</button>
                    <button class="button" id="#h" @onclick="@(e => ButtonEventHandler("H"))">H</button>
                    <button class="button" id="#j" @onclick="@(e => ButtonEventHandler("J"))">J</button>
                    <button class="button" id="#k" @onclick="@(e => ButtonEventHandler("K"))">K</button>
                    <button class="button" id="#l" @onclick="@(e => ButtonEventHandler("L"))">L</button>
                </div>
                <div class="btn-group1">
                    <button class="enter-button" id="#enter" @onclick="@(e => ButtonEventHandler("enter"))">ENTER</button>
                    <button class="button" id="#z" @onclick="@(e => ButtonEventHandler("Z"))">Z</button>
                    <button class="button" id="#x" @onclick="@(e => ButtonEventHandler("X"))">X</button>
                    <button class="button" id="#c" @onclick="@(e => ButtonEventHandler("C"))">C</button>
                    <button class="button" id="#v" @onclick="@(e => ButtonEventHandler("V"))">V</button>
                    <button class="button" id="#b" @onclick="@(e => ButtonEventHandler("B"))">B</button>
                    <button class="button" id="#n" @onclick="@(e => ButtonEventHandler("N"))">N</button>
                    <button class="button" id="#m" @onclick="@(e => ButtonEventHandler("M"))">M</button>
                    <button class="backspace-button" id="#backspace" @onclick="@(e => ButtonEventHandler("backspace"))"><i class='fas fa-backspace' style='font-size:20px;'></i></button>
                </div>
            </div>
        </div>

</div>
</center>
