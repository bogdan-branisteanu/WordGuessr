@using src.Components


@switch (State)
{
    case "contained":
        <table style="background-color:yellow">
            <tr>
                <td>@Letter</td>
            </tr>
        </table>
    break;

    case "double":
        <table style="background: linear-gradient(45deg, #b9d344 30%, green 70%);">
            <tr>
                <td>@Letter</td>
            </tr>
        </table>
    break;

    case "missing":
        <table style="background-color:black">
            <tr>
                <td>@Letter</td>
            </tr>
        </table>
    break;

    case "correct":
        <table style="background-color:green">
            <tr>
                <td>@Letter</td>
            </tr>
        </table>            
     break;

     default:
        <table style="background-color:rgb(45, 45, 45)">
            <tr>
                <td>@Letter</td>
            </tr>
        </table>    
     break;

}
