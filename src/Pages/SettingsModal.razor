@inject IJSRuntime js

<div class="modal fade show d-block" tabindex="-1" role="dialog">
    <div class="modal-backdrop fade show"></div>
     <div class="modal-dialog" style="z-index: 1050; width: 300px;">
            <div class="modal-content">
                <div class="modal-header" >
                    <h5 class="modal-title" style="text-align: center;">@Title</h5>
                    <button type="button" class="close" @onclick="Close" >X</button>
                </div>
                <div class="modal-body" style="text-align: center;">
                   <h>@Text</h>
                   <div class="container">
                        <label class="switch">
                        <input type="checkbox" @onchange="eventArgs => { SettingsChangeColorblind(eventArgs.Value); }">
                        <span class="slider round"></span>
                    </label>
                   </div>
                </div>
               
            </div>
        </div>
</div>

